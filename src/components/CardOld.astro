---
export interface Props {
	name: string;
	image: string;
	link: string;
	scheme: keyof typeof gradients;
	bgColor?: string;
}

const { name, image, link, scheme, bgColor } = Astro.props;

const gradients = {
	green: "from-blue-300 to-green-300",
	yellow: "from-yellow-300 to-orange-300",
	red: "from-red-400 to-purple-400",
	orange: "from-red-400 to-yellow-300",
};
---

<div class={`base-card w-16 p-1 rounded-lg bg-gradient-to-br ${gradients[scheme]} relative`}>
	<div class={`group rounded-md`}>
		<a
			href={link}
			class={`${
				bgColor ? "hover:after:right-[0.1rem]" : "hover:after:right-[0.2rem]"
			} h-[3.5rem] flex flex-col align-middle after:text-black after:content-["Â»"] after:absolute after:top-[0.875rem] after:opacity-0 after:right-0 hover:after:opacity-100 after:text-2xl after:transition-all after:duration-300`}
		>
			<div
				class={`${
					bgColor ? "rounded-md " + bgColor : ""
				} h-[3.5rem] mx-auto my-auto transition-all duration-300 group-hover:-translate-x-[0.4rem] group-hover:scale-[85%] flex items-center`}
			>
				<img src={image} alt={name} class={`max-h-[3.5rem] p-1 mx-auto my-auto`} />
			</div>
		</a>
	</div>
</div>
